---
import { Image } from "astro:assets";
import Link from "./Link.astro";
import { slugify, formatDate } from "../js/utils";

const { frontmatter, url } = Astro.props;
const { title, date, author, image, description, category } = frontmatter;
---

<article class="card">
  <small>
    <a href={`/category/${category}`} class="badge">{category}</a>
  </small>
  <a href={url} aria-hidden="true" tabindex="-1">
    <Image
      src={image.src}
      alt={image.alt}
      width="400"
      height="250"
      format="webp"
      quality={80}
    />
  </a>
  <div class="content">
    <div>
      <h2 class="h3"><a href={url}>{title}</a></h2>
      <small
        >by <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {
          formatDate(date)
        }</small
      >
    </div>
    <p>{description}</p>
    <Link href={url} text="Read Post" style="secondary" />
  </div>
</article>
